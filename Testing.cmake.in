find_package(GTest)

macro(@NAME@_add_test test_name exe_name)
  add_executable(${exe_name} ${ARGN})
  target_link_libraries(${exe_name} PRIVATE
    @NAME@::header
    GTest::gtest_main)
  set_target_properties(${exe_name}
    PROPERTIES
    CXX_STANDARD ${@NAME@_CXX_STANDARD})
  add_test(${test_name} ${exe_name})
endmacro()
